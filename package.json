{
  "name": "vscode-cwscript",
  "displayName": "CWScript Language Support",
  "description": "CWScript language support for Visual Studio Code",
  "version": "0.0.1",
  "publisher": "terran-one",
  "engines": {
    "vscode": "^1.22.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "commands": [
      {
        "command": "cwscript.showAst",
        "title": "Show AST for active document",
        "category": "CWScript",
        "enablement": "editorLangId == cwscript"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "cwsproject.json",
        "url": "./cwsproject.schema.json"
      }
    ],
    "iconThemes": [
      {
        "id": "cwscript",
        "label": "CWScript File Icons",
        "path": "./fileicons/cwscript-icon-theme.json"
      }
    ],
    "themes": [
      {
        "id": "cwscript-dark",
        "label": "CWScript Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/cwscript-dark.json"
      }
    ],
    "languages": [
      {
        "id": "cwscript",
        "aliases": [
          "CWScript",
          "cwscript"
        ],
        "extensions": [
          ".cws"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cwscript",
        "scopeName": "source.cwscript",
        "path": "./syntaxes/cwscript.tmLanguage.json"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "cwscript-ast",
          "name": "CWScript AST"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "cwscript-ast",
          "title": "CWScript AST",
          "icon": "./fileicons/images/cwsfile.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && yarn && cd ../server && yarn && cd .."
  },
  "devDependencies": {
    "@types/node": "^20.1.0",
    "typescript": "^5.0.4"
  }
}
